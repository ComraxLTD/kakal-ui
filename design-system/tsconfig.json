{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "kakal-ui": [
        "dist/kakal-ui/kakal-ui",
        "dist/kakal-ui"
      ]
    }
  },
  "include": [
    "stories/*.stories.*"
, "stories/form/form-autocomplete.stories.ts"  ]
}
